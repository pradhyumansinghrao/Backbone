<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    xmlns:post_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    post_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/writter_image"
                fresco:roundedCornerRadius="5dp"
                fresco:roundBottomStart="false"
                fresco:roundBottomEnd="false"
                fresco:roundWithOverlayColor="@color/blue"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="@color/red"
                android:layout_width="40dp"
                android:layout_height="40dp"
            />


            <LinearLayout
                android:layout_marginStart="45dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/writter_name"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/silver"
                    android:id="@+id/post_date"
                    />

            </LinearLayout>


        </RelativeLayout>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            />



        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_title"
                android:textColor="@color/cardview_dark_background"
                android:textSize="22sp"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/post_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>